<!DOCTYPE html>
<html lang="en">
<% const { id, title, content, date, author } = post; %>
<head>
  <%- include('includes/head', { title }) %>
  <link rel="stylesheet" href="/styles/base.css" />
  <link rel="stylesheet" href="/styles/forms.css" />
  <link rel="stylesheet" href="/styles/posts.css" />
  <script src="/scripts/comments.js" defer></script>
</head>

<body>
<%- include('includes/header') %>
<main id="post-detail">
  <h1><%= title %></h1>
  <section id="post-meta">
    <address><a href="mailto:<%= author.email %>"><%= author.name %></a></address> |
    <time datetime="<%= date.iso %>"><%= date.locale %></time>
  </section>
  <hr>
  <section>
    <p id="body"><%= content %></p>
  </section>
  <section id="comments">
      <p>This post might have comments. You can load them if you want to view them.</p>
      <button class="btn btn-alt" id="load-comments" data-id="<%= id %>">Load Comments</button>
  </section>
  <section id="comments-form">
    <h2>Leave a comment</h2>
    <form action="/posts/<%= id %>/comments">
      <input type="hidden" name="post" value="<%= id %>">
      <div class="form-control">
        <label for="title">Comment title</label>
        <input type="text" id="title" name="title" required />
      </div>
      <div class="form-control">
        <label for="content">Your comment</label>
        <textarea name="content" id="content" rows="3" required></textarea>
      </div>
      <button class="btn">Save Comment</button>
    </form>
  </section>
</main>
</body>

</html>