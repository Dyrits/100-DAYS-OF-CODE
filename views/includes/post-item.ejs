<article class="post-item">
  <h2><%= title %></h2>
  <p class="post-item-author">By <%= author %></p>
  <p><%= summary %></p>
  <div class="post-actions">
    <button class="btn btn-alt">Delete Post</button>
    <a href="posts/<%= id %>/edit">Edit Post</a>
    <a class="btn" href="posts/<%= id %>">View Post</a>
  </div>
</article>