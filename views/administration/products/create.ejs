<%- include("../../includes/head", { title: "Administration: Create a product", stylesheets: ["form"] } ) %>
<%- include("../../includes/header") %>
<main>
    <h1>Administration: Create a product</h1>
    <form action="/administration/products?_csrf=<%= locals.csrf %>" method="POST" enctype="multipart/form-data">
        <p>
            <label for="title">Title</label>
            <input type="text" id="title" name="title" required>
        </p>
        <p>
            <label for="image">Image</label>
            <input type="file" id="image" name="image" accept="image/*">
        </p>
        <p>
            <label for="summary">Summary</label>
            <input type="text" id="summary" name="summary"  maxlength="250" required>
        </p>
        <p>
            <label for="price">Price</label>
            <input type="number" id="price" name="price" min="0.01" step="0.01" required>
        </p>
        <p>
            <label for="description">Description</label>
            <textarea type="number" id="description" name="description" rows="10" required></textarea>
        </p>
        <p>
            <button type="reset" class="button button-alternative">Clear</button>
            <button type="submit" class="button">Create</button>
        </p>
    </form>
</main>
<%- include("../../includes/footer") %>